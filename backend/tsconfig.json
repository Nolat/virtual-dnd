{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "modules/*": ["src/modules/*"],
      "modules": ["src/modules"],
      "utils/*": ["src/utils/*"],
      "utils": ["src/utils"],
      "test/*": ["test/*"],
      "test": ["test"]
    }
  }
}
